@model WeddingPlanning.Models.Guests
<div>
    <table class="table table-hover table-striped">
        <thead class="thead-inverse">
            <tr>
                <th>First Name</th>
                <th>Surname</th>
                <th>Allergies</th>
                <th>Under 12</th>
                <th>Under 5</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var guest in Model.Adults)
        {
            <tr>
                <td scope="row">
                    @guest.FirstName
                </td>
                <td>
                    @guest.Surname
                </td>
                <td>
                    @guest.Allergies
                </td>
                <td>
                </td>
                <td>
                </td>
            </tr>
        }
            @foreach (var child in Model.Children)
            {
                <tr>
                    <td scope="row">
                        @child.FirstName
                    </td>
                    <td>
                        @child.Surname
                    </td>
                    <td>
                        @child.Allergies
                    </td>
                    <td>
                        @if(!(child as WeddingPlanning.GuestStore.IChild).IsBaby)
                        {
                            <span>1</span>
                        }
                    </td>
                    <td>
                        @if ((child as WeddingPlanning.GuestStore.IChild).IsBaby)
                        {
                            <span>1</span>
                        }</td>
                </tr>

            }
        </tbody>
    </table>
</div>