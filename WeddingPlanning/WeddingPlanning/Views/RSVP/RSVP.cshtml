@using WeddingPlanning.Models;
@{
    ViewBag.Title = "RSVP";
}

@section AdditionalStyle {
    <link href="@Url.Content("~/Content/RSVP.css")" rel="stylesheet" type="text/css" />
    }

<h2>We're glad you can join us :)</h2>
<div class="body-content">
    <h4>Please fill out the following details to RSVP.</h4>
    <div class="row">
        <div class="col-sm-6">
            @{Html.RenderPartial("_Guest", ViewData["GuestViewModel"]);}
        </div>
    </div>
    @if (Request.Cookies.AllKeys.Contains("storer"))
            {
        <div class="row">
            <div class="col-sm-6">

                @{Html.RenderPartial("_Children", ViewData["ChildrenViewModel"]);}
            </div>
        </div>

                        Html.RenderPartial("_AddedGuests", ViewData["Guests"]);
                    }
</div>
