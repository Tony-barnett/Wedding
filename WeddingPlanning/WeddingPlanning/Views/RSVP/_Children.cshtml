@model WeddingPlanning.Models.ChildrenViewModel
@using (Html.BeginForm("RSVP#", "RSVP", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Babies, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.Babies, Model.DropDownItems)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Children, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.Children, Model.DropDownItems)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Children" class="btn btn-default" />
        </div>
    </div>
}